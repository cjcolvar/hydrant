<%- stylesheet_links << ["progressBox", {:plugin=>"hydra-head", :media=>"all"}] %>

<%- @ds_desc_metadata = @document_fedora.datastreams["descMetadata"] %>
<%- @ds_rights_metadata = @document_fedora.datastreams["rightsMetadata"] %>
<%- title_values = @ds_desc_metadata.term_values(:title) %>
<%- license_values = @ds_rights_metadata.term_values(:copyright, :license) %>

<%= form_tag url_for( :action=>"update", :controller=>"assets", :content_type=>"video"), "data-resourceType"=>"video", "accept-charset"=>"utf-8"  do %>
    <input name="_method" type="hidden" value="put" />

    <input class="content_type" type="hidden" name="content_type" value="video" />

		<fieldset id="contributors_fields">
		<legend>Authors
			<small>Required</small>
	    	<label>An individual or organizational author of work.</label>			
		</legend>	
		  <%= fedora_text_field(@document_fedora,"descMetadata", [:creator], :multiple=>true).html_safe %>
		<%= fedora_text_field_insert_link "descMetadata", [:creator] %>
		</fieldset>
	
	<fieldset id="title_fieldset">
	<legend>Title<small>Required</small></legend>	
<%= fedora_text_field(@document_fedora,"descMetadata", [:title], :multiple=>true).html_safe %>
		<%= fedora_text_field_insert_link "descMetadata", [:title] %>
	</fieldset>
  
	<fieldset id="license_fieldset">
	<legend>License
		<label>The license outlines the Library's use of your work while acknowledging that you, or the current copyright owner, will continue to be the rights holder.</label>
	</legend>
	</fieldset>

	
		<fieldset id="abstract_fieldset">
		<legend>Abstract
			<label>Provide the abstract of the work, or if none exists, a short summary.</label></legend>
	  <%= fedora_text_area(@document_fedora,"descMetadata", [:description], :multiple=>true).html_safe %>
		<%= fedora_text_area_insert_link "descMetadata", [:description] %>
		</fieldset>

		<fieldset id="keywords_fieldset">
		<legend>Keywords
			<label>Add keywords to describe the work.</label>				
		</legend>
    	<%= fedora_text_field(@document_fedora,"descMetadata", [:subject], :multiple=>true).html_safe %>
		<%= fedora_text_field_insert_link "descMetadata", [:subject] %>
		</fieldset>


		<fieldset id="embargo_fieldset">
			<legend>Release Date
				<label>Choose when to make your work's files available.</label>
			</legend>
		  	<%= fedora_text_field(@document_fedora, "rightsMetadata", [:embargo, :embargo_release_date], :multiple => false).html_safe %>				
		</fieldset>

		<input name="_method" type="hidden" value="put" />
		<%= submit_tag 'Save Description', {:id => "saveDescription"} %>   
<% end %>

<%= render :partial => "shared/delete_asset_confirmation", :locals => {:pid => params[:id], :title => (get_values_from_datastream(@document_fedora,"descMetadata", [:title]).first.empty? ? "this video" : "'" << get_values_from_datastream(@document_fedora,"descMetadata", [:title]).first << "'")  } %>
	<div id="deleteAsset">
	<%= delete_asset_link(params[:id], "video").html_safe %>
	</div>
