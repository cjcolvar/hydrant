<%= form_tag(url_for(:controller=>"assets", :action=>"update", :id=>params[:id]), :class => "step") do -%>
  <%= hidden_field_tag("_method","put") %>
  <p id="title_field" class="fedora-text-field">
    <%= fedora_field_label("descMetadata", [:title], "Title<span class=\"required-note\">Required</span>".html_safe) %>
    <%= fedora_text_field(@document_fedora,"descMetadata", [:title], :multiple=>false, :required=>true) %>
  </p>
  <%= hidden_field_tag(:wf_step, params[:wf_step], :id => "publisher_wf_step") %>
  <%= hidden_field_tag(:new_asset, true, :id => "publisher_new_asset") if params[:new_asset] %>
  <%= hidden_field_tag(:content_type,"video", :id => "publisher_content_type") %>
  <%= submit_tag(submit_name, :name=>"continue", :class=>"save-submit") %>
  <%= submit_tag("Save and Finish", :name=>"finish", :class=>"save-submit") unless params[:new_asset] %>
<%- end -%>
